<h1>Edit User</h1>

<%= simple_form_for([:admin, @user]) do |f| %>
  <%= f.input :email %>
  <%= f.input :admin, as: :boolean, checked_value: true, unchecked_value: false %>
  <%= f.submit "Update User", class: "btn btn-primary", disabled: @user == current_user %>
  <%= link_to 'Back', admin_users_path, class: "btn btn-secondary" %>
<% end %>

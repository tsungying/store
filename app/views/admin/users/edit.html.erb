<h1>Edit User</h1>

<%= form_for [:admin, @user] do |f| %>

  <div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input type="text" readonly class="form-control-plaintext" id="staticEmail" value= <%= @user.email %> >
    </div>
  </div>

  <div class="form-group form-check">
    <%= f.check_box :admin, class: "form-check-input", disabled: @user == current_user %>
    <%= f.label :admin, class: "form-check-label" %>
  </div>

  <%= f.submit "Update User", class: "btn btn-primary", disabled: @user == current_user %>
  <%= link_to 'Back', admin_users_path, class: "btn btn-secondary" %>

<% end %>
